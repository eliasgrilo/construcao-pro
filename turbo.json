{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ],
            "env": [
                "VITE_SUPABASE_URL",
                "VITE_SUPABASE_ANON_KEY"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "VITE_SUPABASE_URL",
                "VITE_SUPABASE_ANON_KEY",
                "NODE_ENV"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}
